# ==========================================================
# NexBus Environment Configuration
# ==========================================================

# --- Application ---
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost
APP_KEY=base64:PUT_A_RANDOM_32BYTE_KEY_HERE

# --- Session ---
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_NAME=NEXBUSSESSID

# --- Database ---
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=nexbus
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# --- Mail (optional, for password reset & notifications) ---
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@gmail.com
MAIL_FROM_NAME="NexBus System"

# --- Logging ---
LOG_CHANNEL=stack
LOG_LEVEL=debug

# --- Timezone ---
TZ=Asia/Colombo

# --- APIs (future: GPS tracking, Maps, etc.) ---
MAPS_API_KEY=your_google_maps_api_key
